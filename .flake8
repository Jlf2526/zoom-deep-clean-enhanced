[flake8]
max-line-length = 120
ignore = E203, W503, E701, F401, F841, F541, W293, E501, E722, E402, W391, E226
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    */test_*.py:F401,F841
    */tests/*.py:F401,F841